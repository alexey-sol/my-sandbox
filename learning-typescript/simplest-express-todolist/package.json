{
  "name": "simplest-express-todolist",
  "version": "1.0.0",
  "description": "The simplest to-do list application based on Node + Express",
  "main": "lib",
  "scripts": {
    "start": "SET NODE_ENV=development && nodemon src/index.ts",
    "test": "npm run test-server",
    "test-server": "SET NODE_ENV=test && mocha --require ts-node/register src/test/setup.ts src/app/**/*.spec.ts"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ignore": [
      "*.test.ts",
      "*.spec.ts"
    ],
    "watch": "src/**/*.ts"
  },
  "author": "Alexey Soloviev",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.43",
    "@types/joi": "^14.0.0",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.3.8",
    "@types/request-promise": "^4.1.42",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.5",
    "ts-node": "^8.0.1",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^6.1.0",
    "event-stream": "3.3.4",
    "express": "^4.16.4",
    "helmet": "^3.16.0",
    "joi": "^14.0.4",
    "moment": "^2.22.2",
    "mongoose": "^5.7.5",
    "request-promise": "^4.2.4",
    "winston": "^3.1.0"
  }
}
