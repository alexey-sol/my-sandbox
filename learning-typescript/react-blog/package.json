{
  "name": "react-blog",
  "version": "0.1.0",
  "description": "A simple full-stack application, a blog",
  "scripts": {
    "start": "SET NODE_ENV=development && nodemon ./server/src/index.ts",
    "webpack": "npx webpack --env=development",
    "heroku-start": "npm run heroku-build && node ./server/src/index.js",
    "heroku-build": "tsc && npx webpack --env=production",
    "test": "npm run test-client && npm run test-server",
    "test-client": "jest",
    "test-server": "SET NODE_ENV=test && mocha --require ts-node/register server/src/test/setup.ts server/src/**/*.spec.ts",
    "lint": "npm run lint-client && npm run lint-common && npm run lint-server",
    "lint-client": "npx tslint -c tslint.json 'client/src/**/*.tsx'",
    "lint-common": "npx tslint -c tslint.json 'common/src/**/*.ts'",
    "lint-server": "npx tslint -c tslint.json 'server/src/**/*.ts'"
  },
  "_moduleAliases": {
    "Server": "server/src/",
    "Types": "common/src/types/",
    "Utils": "common/src/utils/"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "<rootDir>/client/src/test/__mocks__/styleMock.js"
    },
    "setupFiles": [
      "./client/src/test/setup.ts"
    ],
    "testRegex": "(client/src)/.*\\.(test|spec).[jt]sx?$",
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "verbose": true
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ignore": [
      "*.test.ts",
      "*.spec.ts"
    ],
    "watch": "./server/src/**/*.ts"
  },
  "author": "Alexey Soloviev",
  "license": "ISC",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.1.7",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/enzyme": "^3.9.1",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.12",
    "@types/express-socket.io-session": "^1.3.1",
    "@types/helmet": "0.0.42",
    "@types/html-truncate": "^1.2.0",
    "@types/jest": "^24.0.11",
    "@types/joi": "^14.0.1",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.3.8",
    "@types/react": "^16.8.10",
    "@types/react-dom": "^16.0.11",
    "@types/react-router-dom": "^4.3.1",
    "@types/request-promise": "^4.1.42",
    "@types/sanitize-html": "^1.18.3",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "@types/uuid": "^3.4.4",
    "@types/winston": "^2.4.4",
    "awesome-typescript-loader": "^5.2.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "cssnano": "^4.1.10",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "enzyme-to-json": "^3.3.5",
    "jest": "^24.5.0",
    "mocha": "^5.2.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "source-map-support": "^0.5.10",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.1",
    "tslint": "^5.15.0",
    "typescript": "^3.2.4",
    "typings-for-css-modules-loader": "^1.7.0",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  },
  "dependencies": {
    "@tinymce/tinymce-react": "^3.0.1",
    "autoprefixer": "^9.4.7",
    "axios": "^0.18.0",
    "connect-mongo": "^2.0.3",
    "cors": "^2.8.5",
    "css-loader": "^2.1.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "express-socket.io-session": "^1.3.5",
    "helmet": "^3.15.1",
    "html-truncate": "^1.2.2",
    "joi": "^14.3.1",
    "module-alias": "^2.2.0",
    "moment": "^2.24.0",
    "mongoose": "^5.4.5",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-router-dom": "^4.3.1",
    "request-promise": "^4.2.4",
    "sanitize-html": "^2.3.2",
    "socket.io": "^2.2.0",
    "style-loader": "^0.23.1",
    "uuid": "^3.3.2",
    "winston": "^3.1.0"
  }
}
